<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/> -->
            <PatternLayout pattern="[%d{yyyy-MM-hh HH:mm:ss}] %msg%n"/>
        </Console>

        <RollingFile name="status" append="true" fileName="logs/status.log" filePattern="logs/status.log.%d{yyyy-MM}">
            <PatternLayout pattern="%d %p [%c] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <File name="summary" append="false" fileName="logs/summary.log">
            <PatternLayout pattern="%m%n"/>
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        </File>

        <RollingFile name="downloaded" append="true" fileName="logs/downloaded.log" filePattern="logs/downloaded.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d{yyyy-MM-hh HH:mm:ss}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <RollingFile name="empty" append="true" fileName="logs/empty.log" filePattern="logs/empty.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d{yyyy-MM-hh HH:mm:ss}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <RollingFile name="duplicate" append="true" fileName="logs/duplicate.log" filePattern="logs/duplicate.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d{yyyy-MM-hh HH:mm:ss}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
        <RollingFile name="column_size" append="true" fileName="logs/column_size.log" filePattern="logs/column_size.log.%d{yyyy-MM}">
            <PatternLayout pattern="[%d{yyyy-MM-hh HH:mm:ss}] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
        <!-- daily -->
        <Logger name="summary" level="info" additivity="false">
            <AppenderRef ref="status"/>
            <AppenderRef ref="summary"/><!-- human readable -->
            <AppenderRef ref="Console" level="info"/>
        </Logger>

        <!-- monthly -->
        <Logger name="downloaded" level="debug" additivity="false">
            <AppenderRef ref="downloaded"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="empty" level="debug" additivity="false">
            <AppenderRef ref="empty"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="duplicate" level="debug" additivity="false">
            <AppenderRef ref="duplicate"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
        <Logger name="column_size" level="debug" additivity="false">
            <AppenderRef ref="column_size"/>
            <AppenderRef ref="Console" level="info"/>
        </Logger>
    </Loggers>
</Configuration>